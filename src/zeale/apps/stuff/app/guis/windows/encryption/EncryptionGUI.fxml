<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="1.0" style="-fx-background-color: -stuff-dark;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../stylesheets/Pop%20Button.css" />
      <URL value="@../stylesheets/BasicStyles.css" />
   </stylesheets>
   <children>
      <HBox spacing="1.0">
         <children>
            <TabPane minHeight="300.0" minWidth="300.0" prefHeight="400.0" prefWidth="500.0" style="-fx-border-width: 0; -fx-background-color: -stuff-light;" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Input">
                     <content>
                        <StackPane>
                           <padding>
                              <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                           </padding>
                           <children>
                           </children>
                        </StackPane>
                     </content>
                  </Tab>
                <Tab text="Options" />
              </tabs>
            </TabPane>
            <TabPane minHeight="300.0" minWidth="300.0" prefHeight="400.0" prefWidth="500.0" style="-fx-border-width: 0; -fx-background-color: -stuff-light;" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Output">
                     <content>
                        <StackPane>
                           <padding>
                              <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                           </padding>
                           <children>
                           </children>
                        </StackPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </HBox>
      <HBox prefHeight="100.0" spacing="1.0">
         <children>
            <StackPane prefWidth="100.0" style="-fx-background-color: -stuff-light;" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#encryptInput" styleClass="pop-button" text="Encrypt" />
               </children>
            </StackPane>
            <StackPane prefWidth="100.0" style="-fx-background-color: -stuff-light;" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#decryptOutpu" styleClass="pop-button" text="Decrypt" />
               </children>
            </StackPane>
         </children>
      </HBox>
   </children>
</VBox>
